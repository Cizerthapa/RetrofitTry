<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contact"
    tools:context=".Contactfrag">

    <LinearLayout
        android:id="@+id/llContactDetails"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginTop="-10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/subHeading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:id="@+id/vsubHeading1"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_gravity="center"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tvSubHead"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center"
                android:padding="16dp"
                android:textColor="@color/black"
                android:text="Message us"
                android:textSize="18sp" />

            <View
                android:id="@+id/vsubHeading2"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_gravity="center"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivName"
                android:layout_width="36dp"
                android:layout_height="41dp"
                android:layout_marginStart="10dp"
                android:contentDescription="username"
                android:src="@drawable/ic_person_foreground" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:autofillHints="Full Name"
                android:hint="Name"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEmail"
                android:layout_width="36dp"
                android:layout_height="41dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/etMail"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:autofillHints="Name"
                android:hint="email"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <EditText
            android:id="@+id/etDesc"
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:layout_margin="20dp"
            android:autofillHints="description"
            android:gravity="top|left"
            android:hint="Message for us"
            android:inputType="textMultiLine"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/black"
        android:text="Send" />

</RelativeLayout>